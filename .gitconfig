# vim: noexpandtab ts=4 sw=4
[core]
	editor = vim
	pager = LESS=-FRX less
	preloadindex = true
	fscache = true
[user]
	name = Kohei Takahashi
	email = flast@flast.jp
[color]
	ui = auto
[merge]
	tool = vimdiff
[alias]
	st      = status -uno
	ci      = commit
	sm      = submodule
	amend   = commit --amend
	fixup   = commit --no-gpg-sign --fixup
	forward = merge --ff-only
	staged  = diff --cached
	root    = rev-parse --show-toplevel
	dir     = rev-parse --git-dir
#[branch]
#	autosetuprebase = always
[svn]
	pushmergeinfo = true
[grep]
	lineNumber = true
[push]
	default = simple
[imap]
	host = imaps://imap.flast.jp
	user = flast
	folder = INBOX.Drafts
	sslverify = false
[format]
	pretty = fuller
[rerere]
	enabled = true
[diff]
	compactionHeuristic = true
[commit]
	gpgSign = true
[submodule]
	fetchjobs = 8
[gpg]
	program = gpg2
[pull]
	ff = only
